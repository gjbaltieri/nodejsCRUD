                            <label for="refCode">Cód. de referência
                                <input type="text" name="refCode" required value="<%=body.refCode%>" autocomplete="off">
                            </label><br>
                            <label for="description">Descrição
                                <input type="text" name="description" value="<%=body.description%>" autocomplete="off">
                            </label><br>
                            <label for="amount">Quantidade
                                <input type="number" name="amount" required value="<%=body.amount%>" autocomplete="off">
                            </label> <br>
                            <label for="price">Preço
                                <input type="number" name="price" required value="<%=body.price%>" autocomplete="off">
                            </label><br>
                            <label for="sellPrice">Preço de venda
                                <input type="number" name="sellPrice" value="<%=body.sellPrice%>" autocomplete="off">
                            </label><br>
                            <button>Editar</button>
                        </form>
                        <%}%>



            </div>

</body>

</html>